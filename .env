# ============================================================
# POLYMARKET BOT - ENVIRONMENT CONFIG
# Copy this file to .env and fill in your values
# ============================================================

# --- POLYMARKET CLOB API ---
POLY_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
POLY_API_KEY=your-polymarket-api-key
POLY_API_SECRET=your-polymarket-api-secret
POLY_API_PASSPHRASE=your-polymarket-passphrase

# --- TELEGRAM BOT ---
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# --- TRADING STRATEGY ---
# Minimum YES price to trigger buy (e.g. 0.97 = 97 cents)
BUY_THRESHOLD=0.97

# Seconds before close to enter for 5-min markets
ENTRY_SECONDS_5M=120

# Seconds before close to enter for 15-min markets
ENTRY_SECONDS_15M=300

# USDC per trade
TRADE_SIZE_USDC=10.0

# Cut-loss: Sell YES if price drops below this on Polymarket
CUTLOSS_PM_PRICE=0.80

# Cut-loss: Sell YES if Binance price drops this % from entry (UP markets)
# or rises this % from entry (DOWN markets)
CUTLOSS_BINANCE_PCT=0.003

# Assets to monitor: BTC, ETH, SOL (comma separated)
ASSETS=BTC,ETH,SOL

# Market types to monitor: 5m, 15m (comma separated)
MARKET_TYPES=5m,15m
